<div class="log_in">
<div class="create">
  <div class="create.new">
  <%= form_for(@blog) do |f| %>
    <h3>
      投稿する
    </h3>
    <p>タイトル</p>
    
    <%= f.text_field :title, placeholder: "タイトル", :size=>"60" %>
    
    <p>投稿内容</p>
    
    <%= f.text_area :text, placeholder: "ここに本文を入力", :size=>"60x10" %>
    
    <p>画像を選択</p>
    <%= f.file_field :image %>
    <p></p>
    <%= f.submit "SEND" %>
  <% end %>
</div>
</div>