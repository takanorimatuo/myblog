<div class="log_in">
<div class="edit">
  <%= form_for(@blog, method: :patch) do |f| %>
    <h3>
      編集する
    </h3>
    <p>タイトル：</p>
    <%= f.text_field :title, placeholder: "タイトル", value: @blog.title, :size=>"60" %>
    <p>本文：</p>
    <%= f.text_area :text, placeholder: "本文を入力", value: @blog.text, :size=>"60x10" %>
    <p>画像：</p>
    <%= f.file_field :image %>
    <p></p>
    <%= f.submit "SEND" %>
  <% end %>
</div>
</div>
